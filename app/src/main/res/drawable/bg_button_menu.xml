<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:insetBottom="5dp" android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <solid android:color="#80ffffff"/>
                <stroke android:width="0dp" android:color="#eee"/>
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp"/>
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetBottom="5dp" android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <solid android:color="#fff"/>
                <stroke android:width="0dp" android:color="#fff"/>
                <padding android:bottom="10dp" android:left="12dp" android:right="12dp" android:top="10dp"/>
            </shape>
        </inset>
    </item>

</selector>