<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:insetBottom="5dp" android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp">
            <shape android:shape="rectangle">
                <corners android:radius="12dp"/>
                <solid android:color="#b8ffffff"/>
                <stroke android:width="0dp" android:color="#eee"/>
                <padding android:bottom="12dp" android:left="0dp" android:right="0dp" android:top="12dp"/>
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetBottom="5dp" android:insetLeft="5dp" android:insetRight="5dp" android:insetTop="5dp">
            <shape android:shape="rectangle">
                <corners android:radius="12dp"/>
                <solid android:color="#ffffff"/>
                <stroke android:width="0dp" android:color="#fff"/>
                <padding android:bottom="12dp" android:left="0dp" android:right="0dp" android:top="12dp"/>
            </shape>
        </inset>
    </item>

</selector>