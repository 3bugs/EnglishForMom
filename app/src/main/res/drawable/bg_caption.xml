<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:insetBottom="0dp" android:insetLeft="0dp" android:insetRight="0dp" android:insetTop="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="16dp"/>
                <solid android:color="#cccccc"/>
                <stroke android:width="0dp" android:color="#eee"/>
                <padding android:bottom="0dp" android:left="2dp" android:right="2dp" android:top="2dp"/>
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:insetBottom="0dp" android:insetLeft="0dp" android:insetRight="0dp" android:insetTop="0dp">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <solid android:color="#fff"/>
                <stroke android:width="0dp" android:color="#fff"/>
                <padding android:bottom="0dp" android:left="2dp" android:right="2dp" android:top="2dp"/>
            </shape>
        </inset>
    </item>

</selector>