<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText,ContentDescription">

    <ImageView
        android:id="@+id/mom_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg_main" />

    <ImageView
        android:id="@+id/title_image_view"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="@+id/title_image_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_image_view"
        app:layout_constraintTop_toBottomOf="@+id/title_image_view"
        app:srcCompat="@drawable/sub_title" />

    <ImageView
        android:id="@+id/dialogues_image_view"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_menu_2"
        app:layout_constraintBottom_toTopOf="@+id/vocabulary_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/title_dialogues" />

    <ImageView
        android:id="@+id/vocabulary_image_view"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_menu_2"
        app:layout_constraintBottom_toTopOf="@+id/animation_image_view"
        app:layout_constraintEnd_toEndOf="@+id/dialogues_image_view"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/dialogues_image_view"
        app:layout_constraintTop_toBottomOf="@+id/dialogues_image_view"
        app:srcCompat="@drawable/title_vocabulary" />

    <ImageView
        android:id="@+id/animation_image_view"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_menu_2"
        app:layout_constraintBottom_toTopOf="@+id/developer_image_view"
        app:layout_constraintEnd_toEndOf="@+id/vocabulary_image_view"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/vocabulary_image_view"
        app:layout_constraintTop_toBottomOf="@+id/vocabulary_image_view"
        app:srcCompat="@drawable/title_animation" />

    <ImageView
        android:id="@+id/developer_image_view"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_button_menu_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/animation_image_view"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/animation_image_view"
        app:layout_constraintTop_toBottomOf="@+id/animation_image_view"
        app:srcCompat="@drawable/title_developer" />

</androidx.constraintlayout.widget.ConstraintLayout>